<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgBackgroundMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/menu_screen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Student Record"
        android:id="@+id/btnNewRecord"
        android:background="#19975d"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:onClick="createRecord"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnSelectRecord"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Student Record"
        android:id="@+id/btnSelectRecord"
        android:background="#19975d"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:onClick="selectRecord"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Record Picture"
        android:background="#19975d"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/btnRecordPhoto"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:layout_below="@+id/btnSelectRecord"
        android:layout_centerHorizontal="true"
        android:onClick="takePicture"/>
</RelativeLayout>