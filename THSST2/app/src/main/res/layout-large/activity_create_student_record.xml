<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowHeading">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Create Student Record"
                android:id="@+id/txtHeadingCreate"
                android:layout_span="2"
                android:padding="5dp"
                android:textColor="#19975D"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowName">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtFirstName"
                android:hint="First Name"
                android:backgroundTint="#19975D"
                android:textSize="28sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtMiddleName"
                android:hint="Middle Name"
                android:backgroundTint="#19975D"
                android:textSize="28sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtLastName"
                android:hint="Last Name"
                android:backgroundTint="#19975D"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowAge">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtSuffix"
                android:hint="Suffix"
                android:backgroundTint="#19975D"
                android:textSize="28sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtAge"
                android:hint="Age"
                android:backgroundTint="#19975D"
                android:textSize="28sp" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/radioSex"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/radioMale"
                    android:hint="Male"
                    android:checked="true"
                    android:textSize="28sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radioFemale"
                    android:checked="false"
                    android:layout_gravity="fill"
                    android:textSize="28sp" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rowBirthdayTitle">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Birthday"
                android:id="@+id/txtBirthday"
                android:textColor="#000000"
                android:padding="5dp"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowBirthdayInput">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/spinMonth"
                android:backgroundTint="#7CBC9E"
                android:focusable="false" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/spinDay"
                android:backgroundTint="#7CBC9E"
                android:focusable="false" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/spinYear"
                android:backgroundTint="#7CBC9E"
                android:focusable="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowSubmit">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add Student"
                android:id="@+id/btnSubmit"
                android:layout_column="2"
                android:background="#19975d"
                android:onClick="onSubmit"
                android:textSize="28sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="20dp" />
        </TableRow>

    </TableLayout>


</RelativeLayout>