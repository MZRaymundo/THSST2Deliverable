<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgBackgroundMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/menu_screen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw-a-Person Test"
        android:id="@+id/btnSwitch"
        android:background="#19975d"
        android:textSize="28sp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnNextStudent"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:onClick="switchMode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Student"
        android:id="@+id/btnNextStudent"
        android:background="#19975d"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:onClick="nextStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:background="#19975d"
        android:id="@+id/btnExit"
        android:layout_marginTop="25dp"
        android:textSize="28sp"
        android:layout_below="@+id/btnNextStudent"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:onClick="exit"
        android:nestedScrollingEnabled="false" />
</RelativeLayout>